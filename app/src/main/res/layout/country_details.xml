<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView_stats_sumary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STATS SUMMARY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_single_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Country"
            app:layout_constraintEnd_toEndOf="@+id/textView_stats_sumary"
            app:layout_constraintStart_toStartOf="@+id/textView_stats_sumary"
            app:layout_constraintTop_toBottomOf="@+id/textView_stats_sumary" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:text="Confirmed"
            app:layout_constraintBottom_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_single_country" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Recovered"
            app:layout_constraintEnd_toStartOf="@+id/textView5"
            app:layout_constraintStart_toEndOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView_single_country" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:text="Deaths"
            app:layout_constraintBottom_toBottomOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_single_country" />

        <TextView
            android:id="@+id/textView_total_confirmed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="89323"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/textView_total_recovered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="897"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView_total_deaths"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="899878"
            app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView_new_confirmed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="+33"
            app:layout_constraintStart_toStartOf="@+id/textView_total_confirmed"
            app:layout_constraintTop_toBottomOf="@+id/textView_total_confirmed" />

        <TextView
            android:id="@+id/textView_new_recovered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+88"
            app:layout_constraintStart_toStartOf="@+id/textView_total_recovered"
            app:layout_constraintTop_toBottomOf="@+id/textView_total_recovered" />

        <TextView
            android:id="@+id/textView_new_deaths"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+3"
            app:layout_constraintStart_toStartOf="@+id/textView_total_deaths"
            app:layout_constraintTop_toBottomOf="@+id/textView_total_deaths" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>